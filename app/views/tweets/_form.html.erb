<%= form_with(model: tweet, id: dom_id(tweet)) do |form| %>

  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibieron este tweet de ser creado:</h2>

      <ul>
        <% tweet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Tweet', :class => 'btn btn-primary mt-2' %>
  </div>
<% end %>
