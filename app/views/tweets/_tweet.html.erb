
<%= turbo_frame_tag dom_id(tweet) do %>
 <div class="card m-4 bg-secondary">
   <div class="card-content">
        <h5><%= tweet.title %></h5>
        <div class="btn-group">
            <%= button_to "Likes #{tweet.likesCount}", tweet, class: "btn btn-primary btn-sm m-1" %>
            <%= button_to "Retweets #{tweet.retweetsCount}", tweet, class: "btn btn-success btn-sm m-1" %>
            <%= button_to "Eliminar", tweet, method: :delete, :class => "btn btn-danger btn-sm m-1" %>
        </div>
   </div>
 </div>
<% end %>